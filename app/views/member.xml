		<View layout="horizontal" height="80" top="10">
			<ImageView width="80" height="80" left="10" right="10" image="/images/Button01.png" onClick="play"></ImageView>
			<ImageView width="80" height="80" left="10" right="10" image="/images/Button02.png" onClick="withdrawal"></ImageView>
			<ImageView width="80" height="80" left="10" right="10" image="/images/Button03.png" onClick="amountBalance"></ImageView>
		</View>
		<View layout="horizontal" height="50">
			<Label width="80" class="btnLabel" left="10" right="10" onClick="play">PLAY</Label>
			<Label width="80" class="btnLabel" left="10" right="10" onClick="withdrawal">WITHDRAWAL</Label>
			<Label width="80" class="btnLabel" left="10" right="10" onClick="amountBalance">CHECK AMOUNT BALANCE</Label>
		</View>
		<View layout="horizontal" height="80">
			<ImageView width="80" height="80" left="10" right="10" image="/images/Button04.png" onClick="transaction"></ImageView>
			<ImageView width="80" height="80" left="10" right="10" image="/images/Button05.png" onClick="raceCard"></ImageView>
			<ImageView width="80" height="80" left="10" right="10" image="/images/Button06.png" onClick="raceOdd"></ImageView>
		</View>
		<View layout="horizontal" height="50">
			<Label width="80" class="btnLabel" left="10" right="10" onClick="transaction">VIEW TRANSACTION</Label>
			<Label width="80" class="btnLabel" left="10" right="10" onClick="raceCard">RACE CARD</Label>
			<Label width="80" class="btnLabel" left="10" right="10" onClick="raceOdd">RACE ODD</Label>
