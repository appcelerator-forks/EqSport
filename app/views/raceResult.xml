<Alloy>
	<View id="mainView" layout="vertical" backgroundImage="/images/BG_Large.jpg">
		<View layout="composite" height="50" backgroundColor="#EA431A">
			<View width="100%">
				<Label class="title" color="white" minimumFontSize="12">RACE RESULT</Label>
			</View>
			<View width="15%" left="0" onClick="back">
				<ImageView image="/images/others_08.png" width="20" height="30"></ImageView>
			</View>
		</View>
		<View id="dateContainer" layout="horizontal" width="90%" height="50" top="10" backgroundColor="white">
			<View width="25%">
				<Label class="boldTitle" color="black" left="10">Date</Label>
			</View>
			<View id="dateView" width="74.9%" height="50">
				<View width="100%" height="30" backgroundColor="white" onClick="showDate" top="10">
					<ImageView image="/images/others_10.png" width="15" height="30" right="10"></ImageView>
					<Label id="date" onClick="showDate" backgroundColor="transparent" color="black"></Label>
				</View>
				<View layout="vertical" id="pickerView" width="100%" height="215" backgroundColor="black" visible="false" top="50">
					<Button height="50" width="100%" color="white" right="0" onClick="done">Done</Button>
					<Picker id="picker" type="Ti.UI.PICKER_TYPE_DATE" width="125%" selectionIndicator="true" backgroundColor="white">
					</Picker>
				</View>
				<!--<ImageView image="/images/others_10.png" width="27" height="41" right="10"></ImageView>
				<Picker id="picker1" onChange="date" width="100%" selectionIndicator="true" backgroundColor="transparent">
					<PickerRow title="30/11/2014"></PickerRow>
					<PickerRow title="1"></PickerRow>
					<PickerRow title="2"></PickerRow>
					<PickerRow title="3"></PickerRow>
				</Picker>-->
				
			</View>
		</View>
		<View layout="horizontal" width="90%" height="50" top="10" backgroundColor="white">
			<View width="25%">
				<Label class="boldTitle" color="black" left="10">Race No.</Label>
			</View>
			<View width="74.9%">
				<!--<ImageView image="/images/others_10.png" width="27" height="41" right="10"></ImageView>
				<Picker id="picker2" onChange="raceNo" width="100%" selectionIndicator="true" backgroundColor="transparent">
					<PickerRow title="12"></PickerRow>
					<PickerRow title="1"></PickerRow>
					<PickerRow title="2"></PickerRow>
					<PickerRow title="3"></PickerRow>
				</Picker>-->
				<TextField id="raceNo" width="90%" height="40" backgroundColor="#EFEFEF" color="black" keyboardType="Titanium.UI.KEYBOARD_NUMBER_PAD" textAlign="center" onClick="triggerRace"></TextField>
			</View>
		</View>
		<View platform="android" layout="horizontal" width="90%" height="50" top="10" backgroundColor="white">
			<View width="30%">
				<Label class="boldTitle" color="black" left="10">Venue</Label>
			</View>
			<View width="70%">
				<ImageView image="/images/others_10.png" width="15" height="30" right="10"></ImageView>
				<Picker id="picker2" onChange="venue" width="100%" selectionIndicator="true" backgroundColor="transparent">
					<!--<PickerRow title="JAP (GOOD)"></PickerRow>
					<PickerRow title="1"></PickerRow>
					<PickerRow title="2"></PickerRow>
					<PickerRow title="3"></PickerRow>-->
				</Picker>
				
			</View>
		</View>
		<View id="venueView" platform="ios" layout="horizontal" width="90%" height="50" top="10" backgroundColor="white">
			<View width="30%">
				<Label class="boldTitle" color="black" left="10">Venue</Label>
			</View>
			<View id="venueContentView" width="70%" height="50" backgroundColor="white">
				<ImageView image="/images/others_10.png" width="15" height="30" right="10"></ImageView>
				<Label id="venueLabel" height="30" width="90%" backgroundColor="transparent" color="black" onClick="showVenue" textAlign="Ti.UI.TEXT_ALIGNMENT_CENTER"></Label>
				<View id="pickerView2" height="50" width="100%" visible="false">
					<Button id="done2" height="30" width="100%" backgroundColor="black" color="white" top="0" left="0" onClick="done2" visible="false">Done</Button>
					<Picker id="picker2" onChange="venue" width="100%" height="Ti.UI.SIZE" top="30" selectionIndicator="true" backgroundColor="#EFEFEF" visible="false">
					</Picker>
				</View>
			</View>
		</View>
		<ScrollView id="scrollView" layout="vertical" height="Ti.UI.SIZE" width="90%" backgroundColor="white" top="10">
			<View layout="horizontal" height="60" backgroundColor="#EA431A" width="100%">
				<View width="25%" backgroundColor="gray">
					<View layout="vertical">
						<Label class="smallTitle" color="white">RACE</Label>
						<Label class="largeTitle" color="white">9</Label>
					</View>
				</View>
				<View width="74.9%">
					<View layout="vertical" width="Ti.UI.SIZE" left="0">
						<Label class="smallTitle" color="white" left="10">RESULT</Label>
						<Label class="largeTitle" color="white" left="10">7,9,10</Label>
					</View>
				</View>
			</View>
			<!--Sample of the result view 1-->
			<View id="contentView1" layout="horizontal" height="60" width="100%">
				<View id="leftView1" width="25%">
					<Label id="leftLabel1" color="black">WIN</Label>
				</View>
				<View id="centerView1" width="44.9%">
					<Label id="centerLabel1" color="black">7</Label>
				</View>
				<View id="rightView1" width="30%">
					<Label id="rightLabel1" color="black">RM15</Label>
				</View>
			</View>
			<View id="centerLineView1" width="100%" height="1" bottom="2">
				<View id="lineView1" backgroundColor="#A5A5A5" width="90%" height="1"></View>
			</View>
			<!--Sample of the result view 2-->
			<View id="contentView2" layout="horizontal" height="60" width="100%">
				<View id="leftView2" width="25%">
					<Label id="leftLabel2" color="black">QIN</Label>
				</View>
				<View id="centerView2" width="44.9%">
					<Label id="centerLabel2" color="black">7</Label>
				</View>
				<View id="rightView2" width="30%">
					<Label id="rightLabel2" color="black">RM8</Label>
				</View>
			</View>
			<View id="centerLineView2" width="100%" height="1" bottom="2">
				<View id="lineView2" backgroundColor="#A5A5A5" width="90%" height="1"></View>
			</View>
		</ScrollView>
	</View>
</Alloy>
