			                <PickerRow value="fpx" title="FPX (MEPS)"/>
			                <PickerRow value="epay" title="E-Pay"/>
		                	<PickerRow value="mtc" title="Malaysian Turf Clubs"/>
	            		</Picker>
					</View>
				</View>
				
				<View id="bank0"  top="5" layout="vertical" height="Ti.UI.SIZE" width="90%" visible="false">
