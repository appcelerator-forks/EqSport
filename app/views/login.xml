<Alloy>
 <View height="Ti.UI.SIZE">
		<View zIndex="11" layout="vertical" id="loadingBar" height="120" opacity="0" width="120" borderRadius="15"  backgroundColor="#2E2E2E" >
        	<ActivityIndicator  id="activityIndicator" />
        	<Label top="5" text="Loading" color="#ffffff" />
        </View>
		<View class="container" layout="vertical" backgroundImage="/images/BG_Large.jpg">
			 
			<View layout="composite" height="50" backgroundColor="white" >
				<!--<Label color="gray">Member Sign In</Label>-->
				<!--<ImageView width="40" height="40" right="5" backgroundColor="blue" onClick="close"></ImageView>-->
				<ImageView zIndex="10" height="30" image="/images/logo.png"></ImageView>
			</View>
			<View layout="composite" height="280">
				<View>
					<ImageView image="/images/signin_bg.png" height="280" width="100%" top="0"></ImageView>
				</View>
				<View layout="vertical" height="250">
					<Label height="30" color="white">Account No.:</Label>
					<TextField id="account" value="" width="80%" borderStyle="Titanium.UI.INPUT_BORDERSTYLE_NONE" height="35" top="5" backgroundColor="white" passwordMask="false" hintText="123****" color="black" keyboardType="Titanium.UI.KEYBOARD_DEFAULT" returnKeyType="Titanium.UI.RETURNKEY_NEXT"></TextField>
					<Label top="10" height="30" color="white">Pin No.</Label>
					<TextField id="pin" value="" width="80%" borderStyle="Titanium.UI.INPUT_BORDERSTYLE_NONE" height="35" top="5" backgroundColor="white" passwordMask="true" hintText="***********" color="black"></TextField>
					<ImageView top="20" height="40" image="/images/btn_submit.png" onClick="submit"></ImageView> 
				</View>
			</View>
			<View layout="vertical">
				<Label top="20" color="black">Need a EQLink Account?</Label>
				<ImageView top="10" height="40" image="/images/btn_getone.png" onClick="newAccount"></ImageView>
				<View top="10" layout="vertical" height="Ti.UI.SIZE">
					<Label color="#00BFFF" width="30" onClick="skip">Skip</Label>
					<View top="0" backgroundColor="#00BFFF" width="30" height="1" onClick="skip"></View> 
				</View>
			</View>
		</View>
	</View>
</Alloy>