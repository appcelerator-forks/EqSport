<Alloy>
	<View id="mainView" layout="vertical" backgroundColor="#A5A5A5">
		<View layout="composite" height="50" backgroundColor="#EA431A" >
			<View width="100%">
				<Label class="title" color="white" minimumFontSize="12">RACE CARD</Label>
			</View>
			<View width="15%" left="0" onClick="back">
				<ImageView image="/images/others_08.png" onClick="back"></ImageView>
			</View>
		</View>
		<View layout="horizontal" width="90%" height="50" top="10" backgroundColor="white">
			<View width="30%">
				<Label class="title" color="black">Venue</Label>
			</View>
			<View width="50%">
				<Picker id="picker1" onChange="venue" width="100%" selectionIndicator="true" backgroundColor="#A5A5A5" color="black">
					<PickerRow backgroundColor="yellow" color="red" title="JAP (GOOD)"></PickerRow>
					<PickerRow title="1"></PickerRow>
					<PickerRow title="2"></PickerRow>
					<PickerRow title="3"></PickerRow>
				</Picker>
			</View>
			<View width="20%">
				<ImageView image="" backgroundColor="blue" width="40" height="40"></ImageView>
			</View>
		</View>
		<View layout="horizontal" width="90%" height="50" top="10" backgroundColor="white">
			<View width="30%">
				<Label class="title" color="black">Date</Label>
			</View>
			<View width="50%">
				<Picker id="picker2" onChange="date" width="100%" selectionIndicator="true" backgroundColor="#A5A5A5" color="black">
					<PickerRow title="30/11/2014"></PickerRow>
					<PickerRow title="1"></PickerRow>
					<PickerRow title="2"></PickerRow>
					<PickerRow title="3"></PickerRow>
				</Picker>
			</View>
			<View width="20%">
				<ImageView image="" backgroundColor="blue" width="40" height="40"></ImageView>
			</View>
		</View>
		<ScrollView id="scrollView" layout="vertical">
			
		</ScrollView>
	</View>
</Alloy>
