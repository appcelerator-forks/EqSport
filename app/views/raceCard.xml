<Alloy>
	<View id="mainView" layout="vertical" backgroundImage="/images/BG_Large.jpg">
		<View layout="composite" height="50" backgroundColor="#EA431A" >
			<View width="100%">
				<Label class="title" color="white" minimumFontSize="12">RACE CARD</Label>
			</View>
			<View width="15%" left="0" onClick="back">
				<ImageView image="/images/others_08.png" width="20" height="30"></ImageView>
			</View>
		</View>
		<View platform="android" layout="horizontal" width="90%" height="50" top="10" backgroundColor="white">
			<View width="30%">
				<Label class="boldTitle" color="black" left="10">Venue</Label>
			</View>
			<View width="70%">
				<ImageView image="/images/others_10.png" width="15" height="30" right="10"></ImageView>
				<Picker id="picker1" onChange="venue" width="100%" selectionIndicator="true" backgroundColor="transparent">
					<PickerRow title="JAP (GOOD)"></PickerRow>
					<PickerRow title="1"></PickerRow>
					<PickerRow title="2"></PickerRow>
					<PickerRow title="3"></PickerRow>
				</Picker>
				
			</View>
		</View>
		<View id="venueView" platform="ios" layout="horizontal" width="90%" height="50" top="10" backgroundColor="white">
			<View width="30%">
				<Label class="boldTitle" color="black" left="10">Venue</Label>
			</View>
			<View id="venueContentView" width="70%" height="50" backgroundColor="white">
				<ImageView image="/images/others_10.png" width="15" height="30" right="10"></ImageView>
				<Label id="venueLabel" height="30" width="90%" backgroundColor="transparent" color="black" onClick="showVenue" textAlign="Ti.UI.TEXT_ALIGNMENT_CENTER"></Label>
				<View id="pickerView1" height="50" width="100%" visible="false">
					<Button id="done1" height="30" width="100%" backgroundColor="black" color="white" top="0" left="0" onClick="done1" visible="false">Done</Button>
					<Picker id="picker1" onChange="venue" width="100%" height="Ti.UI.SIZE" top="30" selectionIndicator="true" backgroundColor="#EFEFEF" visible="false">
						<PickerRow title="JAP (GOOD)"></PickerRow>
						<PickerRow title="1"></PickerRow>
						<PickerRow title="2"></PickerRow>
						<PickerRow title="3"></PickerRow>
					</Picker>
				</View>
			</View>
		</View>
		<View layout="horizontal" width="90%" height="50" top="10" backgroundColor="white">
			<View width="30%">
				<Label class="boldTitle" color="black" left="10">Date</Label>
			</View>
			<View width="70%">
				<Label id="date" width="Ti.UI.SIZE" color="black">31/12/2014</Label>
				<!--<ImageView image="/images/others_10.png" width="15" height="30" right="10"></ImageView>
				<Picker id="picker2" onChange="date" width="100%" selectionIndicator="true" backgroundColor="transparent">
					<PickerRow title="30/11/2014"></PickerRow>
					<PickerRow title="1"></PickerRow>
					<PickerRow title="2"></PickerRow>
					<PickerRow title="3"></PickerRow>
				</Picker>-->
			</View>
			<!--<View width="20%">
				<ImageView image="/images/others_10.png" width="40" height="40"></ImageView>
		</View>-->
		</View>
		<ScrollView id="scrollView" layout="vertical" height="Ti.UI.SIZE" width="90%" backgroundColor="white" top="10">
			<!--Sample of the result view 1-->
			<View id="contentView1" layout="horizontal" height="60" width="100%">
				<View id="leftView1" width="30%">
					<Label id="leftLabel1" color="black">9</Label>
				</View>
				<View id="centerView1" width="50%">
					<Label id="centerLabel1" color="black">1:35:00PM</Label>
				</View>
				<View id="rightView1" width="20%">
				</View>
			</View>
			<View id="centerLineView1" width="100%" height="1" bottom="2">
				<View id="lineView1" backgroundColor="#A5A5A5" width="90%" height="1"></View>
			</View>
			<!--Sample of the result view 2-->
			<View id="contentView2" layout="horizontal" height="60" width="100%">
				<View id="leftView2" width="30%">
					<Label id="leftLabel2" color="black">10</Label>
				</View>
				<View id="centerView2" width="50%">
					<Label id="centerLabel2" color="black">1:35:00PM</Label>
				</View>
				<View id="rightView2" width="20%">
				</View>
			</View>
			<View id="centerLineView2" width="100%" height="1" bottom="2">
				<View id="lineView2" backgroundColor="#A5A5A5" width="90%" height="1"></View>
			</View>
		</ScrollView>
	</View>
</Alloy>
