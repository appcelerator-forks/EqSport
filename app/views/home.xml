<Alloy>
	<ScrollView class="container" layout="vertical" disableBounce="true">
		
		<View layout="vertical" backgroundImage="/images/top_bg.png" height="150">
			<View layout="vertical" height="50"  width="90%">
				<Label class="welcomeText">Welcome</Label>
				<Label class="descText">Enjoy privilege at everywhere and everytime</Label>
			</View>	
			<View layout="horizontal" height="100" width="90%" top="40">
				<View layout="horizontal"  height="30" width="45%" left="13">
					<ImageView image="/images/btn_login.png" onClick="login" />
				</View>
				<View layout="horizontal"  height="30" width="45%" left="13">
					<ImageView image="/images/btn_signup.png" />
				</View>
			</View>	
		</View>
		<View layout="horizontal" width="90%" height="130">
			<ImageView onClick="goTo" mod="Card"  image="/images/home01.png" width="42%" left="10" right="10"  top="10" ></ImageView>
			<ImageView onClick="goTo" mod="Play" image="/images/home02.png" width="42%" left="25" top="10"></ImageView>
		</View>
		<View layout="horizontal" width="88%" height="30">
			<Label width="40%" left="10" right="5" top="20" onClick="goTo" mod="Card" textAlign="Ti.UI.TEXT_ALIGNMENT_CENTER">EQLink Card</Label>
			<Label width="40%" left="40" top="20" onClick="goTo" mod="Play" textAlign="Ti.UI.TEXT_ALIGNMENT_CENTER">Play with EQLink</Label>
		</View>
		<View layout="horizontal" width="90%" height="130">
			<ImageView onClick="goTo" mod="Win" image="/images/home03.png" width="42%" left="10" right="10"  top="20" ></ImageView>
			<ImageView onClick="goTo" mod="Reload" image="/images/home04.png" width="42%" left="25" top="20"></ImageView>
		</View>
		<View layout="horizontal" width="90%" height="30">
			<Label width="40%" left="10" right="5" top="30" onClick="goTo" mod="Win" textAlign="Ti.UI.TEXT_ALIGNMENT_CENTER">Win with EQLink</Label>
			<Label width="40%" left="40" top="30" onClick="goTo" mod="Reload" textAlign="Ti.UI.TEXT_ALIGNMENT_CENTER">Reload EQLink</Label>
		</View>
	</ScrollView>
</Alloy>