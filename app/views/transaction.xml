<Alloy>
	<View backgroundImage="/images/BG_Large.jpg">
		<ScrollView id="scrollView" layout="vertical">
			<View layout="composite" height="50" backgroundColor="#EA431A" >
				<View width="100%">
					<Label class="title" color="white" minimumFontSize="12">VIEW TRANSACTION</Label>
				</View>
				<View width="15%" left="0" onClick="back">
					<ImageView image="/images/others_08.png" width="20" height="30"></ImageView>
				</View>
			</View>
			<View id="dateView" height="70" width="100%">
				<View width="90%" height="50" backgroundColor="white" onClick="showDate" top="10">
					<Label id="date" onClick="showDate" color="black"></Label>
				</View>
				<View id="pickerView" width="90%" height="215" backgroundColor="black" visible="false" top="60">
					<Button height="50" width="100%" color="white" top="0" right="0" onClick="done">Done</Button>
					<Picker id="picker" type="Ti.UI.PICKER_TYPE_DATE" width="100%" selectionIndicator="true" top="50" backgroundColor="black">
					</Picker>
				</View>
			</View>
			<View id="contentView" backgroundColor="white">
				
			</View>
		</ScrollView>
	</View>
</Alloy>
