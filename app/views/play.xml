<Alloy>
	<View id="mainView">
		<ScrollView id="scrollView" layout="vertical" backgroundColor="white">
			<View layout="composite" height="50" backgroundColor="#EA431A" >
				<View width="100%">
					<Label class="title" color="white" minimumFontSize="12">PLAY</Label>
				</View>
				<View width="15%" left="0" onClick="back">
					<ImageView image="/images/others_08.png" onClick="back"></ImageView>
				</View>
			</View>
			<View layout="vertical" height="170">
				<View height="50" top="10" width="90%">
					<View layout="horizontal" width="Ti.UI.SIZE" >
						<View width="42%">
							<Label id="venue" color="black">Venue: JAP (Good)</Label>
						</View>
						<View width="2%">
							<Label color="black">|</Label>
						</View>
						<View width="20%">
							<Label id="race" color="black">Race: 10</Label>
						</View>
						<View width="2%">
							<Label color="black">|</Label>
						</View>
						<View width="34%">
							<Label id="mtr" color="black">Min to Race: 34</Label>
						</View>
					</View>
				</View>
				<ScrollView id="scrollView2" layout="vertical" height="90" width="90%" top="10" backgroundColor="#A5A5A5" bottom="10">
					<View layout="horizontal" height="30" width="100%">
						<View width="19%">
						</View>
						<View width="20%">
							<Label color="orange">13</Label>
						</View>
						<View width="20%">
							<Label color="orange">11</Label>
						</View>
						<View width="20%">
							<Label color="orange">10</Label>
						</View>
						<View width="20%">
							<Label color="orange">9</Label>
						</View>
					</View>
					<View layout="horizontal" height="30" width="100%">
						<View width="19%">
							<Label color="black">w</Label>
						</View>
						<View width="20%">
							<Label color="black">6</Label>
						</View>
						<View width="20%">
							<Label color="black">9999</Label>
						</View>
						<View width="20%">
							<Label color="black">9999</Label>
						</View>
						<View width="20%">
							<Label color="black">9999</Label>
						</View>
					</View>
					<View layout="horizontal" height="30" width="100%">
						<View width="19%">
							<Label color="black">w</Label>
						</View>
						<View width="20%">
							<Label color="black">6</Label>
						</View>
						<View width="20%">
							<Label color="black">9999</Label>
						</View>
						<View width="20%">
							<Label color="black">9999</Label>
						</View>
						<View width="20%">
							<Label color="black">9999</Label>
						</View>
					</View>
				</ScrollView>
			</View>
			<View layout="vertical" backgroundColor="#A5A5A5" height="Ti.UI.SIZE">
				<Label color="black" top="10">Your available balance is RM85.05</Label>
				<View layout="vertical" width="90%" height="Ti.UI.SIZE" backgroundColor="white" top="10" bottom="10">
					<View layout="horizontal" height="50" width="90%">
						<View width="40%">
							<Label left="5" color="black">Venue</Label>
						</View>
						<View width="60%">
							<Picker id="picker1" onChange="venue" width="100%" selectionIndicator="true" backgroundColor="#A5A5A5">
								<PickerRow id="row1" ></PickerRow>
								<PickerRow title="1"></PickerRow>
								<PickerRow title="2"></PickerRow>
								<PickerRow title="3"></PickerRow>
							</Picker>
						</View>
					</View>
					<View layout="horizontal" height="50" width="90%">
						<View width="40%">
							<Label left="5" color="black">Race No.</Label>
						</View>
						<View width="60%">
							<Picker id="picker2" onChange="raceNo" width="100%" selectionIndicator="true" backgroundColor="#A5A5A5">
								<PickerRow title="10"></PickerRow>
								<PickerRow title="1"></PickerRow>
								<PickerRow title="2"></PickerRow>
								<PickerRow title="3"></PickerRow>
							</Picker>
						</View>
					</View>
					<View layout="horizontal" height="50" width="90%">
						<View width="40%">
							<Label left="5" color="black">Pool</Label>
						</View>
						<View width="60%">
							<Picker id="picker3" onChange="pool" width="100%" selectionIndicator="true" backgroundColor="#A5A5A5">
								<PickerRow title="WIN / PLA"></PickerRow>
								<PickerRow title="1"></PickerRow>
								<PickerRow title="2"></PickerRow>
								<PickerRow title="3"></PickerRow>
							</Picker>
						</View>
					</View>
					<View layout="horizontal" height="50" width="90%">
						<View width="40%">
							<Label left="5" color="black">Runner*</Label>
						</View>
						<View width="60%">
							<Picker id="picker4" onChange="runner" width="100%" selectionIndicator="true" backgroundColor="#A5A5A5">
								<PickerRow title="1"></PickerRow>
								<PickerRow title="2"></PickerRow>
								<PickerRow title="3"></PickerRow>
								<PickerRow title="4"></PickerRow>
							</Picker>
						</View>
					</View>
					<View layout="horizontal" height="50" width="90%">
						<View width="40%">
							<Label left="5" color="black" width="40%">Bet (RM)</Label>
						</View>
						<View width="60%">
							<TextField id="bet" width="100%" backgroundColor="#A5A5A5" color="white" keyboardType="Titanium.UI.KEYBOARD_NUMBER_PAD"></TextField>
						</View>
					</View>
					<View height="50" backgroundColor="black" width="100%" onClick="confirm">
						<Label color="white" onClick="confirm">Confirm</Label>
					</View>
				</View>
			</View>
		</ScrollView>
	</View>
</Alloy>
