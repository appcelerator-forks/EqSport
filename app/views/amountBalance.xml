<Alloy>
	<View height="Ti.UI.SIZE">
		<View zIndex="11" layout="vertical" id="loadingBar" height="120" opacity="0" width="120" borderRadius="15"  backgroundColor="#2E2E2E" >
        	<ActivityIndicator  id="activityIndicator" />
        	<Label top="5" text="Loading" color="#ffffff" />
        </View>
		<View layout="vertical" backgroundImage="/images/BG_Large.jpg">
			<View layout="composite" height="50" backgroundColor="#EA431A" >
				<!--<ImageView image="/images/menu_toggle.png" left="0" height="40" width="40" />
				<ImageView image="/images/logo.png"></ImageView>-->
				<View width="100%">
					<Label class="title" color="white" minimumFontSize="12">CHECK AMOUNT BALANCE</Label>
				</View>
				<View width="15%" left="0" onClick="back">
					<ImageView image="/images/others_08.png" width="20" height="30"></ImageView>
				</View>
			</View>
			<View layout="vertical">
				<Label top="30" color="#444444" class="label1">Your available balance</Label>
				<View layout="composite" height="180" top="20">
					<View backgroundColor="white" borderRadius="90" height="180" width="180"></View>
					<View layout="vertical" height="Ti.UI.SIZE">
						<Label color="#474747" class="label1">RM</Label>
						<Label id="amount" color="#474747" class="amount">0.00</Label>
					</View>
				</View>
				<Label top="30" color="#444444" class="label1">LASTEST UPDATED</Label>
				<Label id="date" color="#A5A5A5" class="label2">01/01/2015</Label>
				<Label id="time" color="#A5A5A5" class="label2">11:59:59PM</Label>
				<ImageView height="40" top="40" image="/images/Button_topup.png" onClick="topUp"></ImageView>
			</View>
		</View>
	</View>
</Alloy>
